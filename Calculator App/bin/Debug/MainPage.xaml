<Page
    x:Class="Calculator_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="63" Margin="225,102,0,0" TextWrapping="Wrap" Text=""  FontSize="45" Foreground="White" BorderBrush="Red" TextAlignment="Right" Background="Black"  VerticalAlignment="Top" Width="843"/>
        <TextBox x:Name="ValueBox" HorizontalAlignment="Left" Height="63" Margin="225,34,0,0" TextWrapping="Wrap" Text=""  FontSize="45" Foreground="White" BorderBrush="Red" TextAlignment="Right" Background="Black"  VerticalAlignment="Top" Width="843"/>

        <GridView  SelectionMode="None" x:Name="NumberGridView" HorizontalAlignment="Left" Height="480" Margin="225,203,0,0" VerticalAlignment="Top" Width="507">
            <Button x:ConnectionId='6' x:Name="Btn7"                      Content="7" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='7' x:Name="Btn4"                      Content="4" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='8' x:Name="Btn1"                      Content="1" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='9' x:Name="DotButton"                           Content="." Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='10' x:Name="Btn8"                      Content="8" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='11' x:Name="Btn5"                      Content="5"  Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='12' x:Name="Btn2"                      Content="2" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='13' x:Name="Btn0"                      Content="0" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='14' x:Name="Btn9"                      Content="9" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='15' x:Name="Btn6"                      Content="6" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='16' x:Name="Btn3"                      Content="3" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
            <Button x:ConnectionId='17' x:Name="BtnClear"                          Content="Clear" Background="Gray" BorderBrush="Red" FontSize="40"  Width="152" Height="101"/>
        </GridView>
        <GridView x:Name="SymbolButtonGrid" SelectionMode="None" HorizontalAlignment="Left" Height="482" Margin="750,201,0,0" VerticalAlignment="Top" Width="357">
            <Button x:ConnectionId='1'                            x:Name="PlusButton" Content="+" Background="Gray" BorderBrush="Red" FontSize="40" Height="101" Width="152"/>
            <Button x:ConnectionId='2'                             x:Name="MinusButton" Content="-" Background="Gray" BorderBrush="Red" FontSize="40" Height="101" Width="152"/>
            <Button x:ConnectionId='3'                             x:Name="MultiButton" Content="*" Background="Gray" BorderBrush="Red" FontSize="40" Height="101" Width="152"/>
            <Button x:ConnectionId='4'                           x:Name="DivButton" Content="/" Background="Gray" BorderBrush="Red" FontSize="40" Height="101" Width="152"/>
            <Button Content="± " Background="Gray" BorderBrush="Red" FontSize="40" Height="101" Width="152"/>
            <Button Content="1/X" Background="Gray" BorderBrush="Red" FontSize="40" Height="101" Width="152"/>
            <Button x:Name="RootButton" Content="√" Background="Gray" BorderBrush="Red" FontSize="40" Height="101" Width="152"/>
            <Button x:ConnectionId='5'                             x:Name="EqualButton" Content="=" Background="Gray" BorderBrush="Red" FontSize="40" Height="101" Width="152"/>
        </GridView>


    </Grid>
</Page>

